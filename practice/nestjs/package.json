{
  "name": "nestjs",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "test:e2e": "vitest run --config ./vitest.config.e2e.ts",
    "build:k6": "node build-k6.js",
    "test:load:notice": "npm run build:k6 && docker run --rm -i -v $(pwd)/dist/k6:/dist -w /dist --add-host=host.docker.internal:host-gateway grafana/k6 run notices.js",
    "test:load:otp": "npm run build:k6 && docker run --rm -i -v $(pwd)/dist/k6:/dist -w /dist --add-host=host.docker.internal:host-gateway grafana/k6 run otp.js",
    "test:load:search": "npm run build:k6 && docker run --rm -i -v $(pwd)/dist/k6:/dist -w /dist --add-host=host.docker.internal:host-gateway grafana/k6 run search.js",
    "test:load:ranking": "npm run build:k6 && docker run --rm -i -v $(pwd)/dist/k6:/dist -w /dist --add-host=host.docker.internal:host-gateway grafana/k6 run ranking.js",
    "test:load:coupon": "npm run build:k6 && docker run --rm -i -v $(pwd)/dist/k6:/dist -w /dist --add-host=host.docker.internal:host-gateway grafana/k6 run coupon.js",
    "test:ha": "npx ts-node test/ha-availability.ts"
  },
  "dependencies": {
    "@nestjs/cache-manager": "^2.3.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "cache-manager": "^5.7.6",
    "cache-manager-redis-store": "^2.0.0",
    "cache-manager-redis-yet": "^5.1.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "ioredis": "^5.8.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@jridgewell/remapping": "^2.3.5",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@swc/core": "^1.15.7",
    "@types/cache-manager-redis-store": "^2.0.4",
    "@types/express": "^5.0.0",
    "@types/ioredis-mock": "^8.2.6",
    "@types/jest": "^30.0.0",
    "@types/k6": "^1.4.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.27.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "ioredis-mock": "^8.13.1",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "unplugin-swc": "^1.5.9",
    "vitest": "^4.0.16"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}